{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "typescript", "oxc", "react", "import"],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "allow",
    "style": "allow",
    "pedantic": "allow",
    "restriction": "allow",
    "nursery": "allow"
  },
  "rules": {
    "eslint/sort-imports": "allow",
    "react/react-in-jsx-scope": "allow",
    "react/jsx-uses-react": "allow",
    "import/no-unassigned-import": [
      "error",
      {
        "allow": ["**/*.css"]
      }
    ]
  },
  "settings": {
    "jsx-a11y": {
      "polymorphicPropName": null,
      "components": {},
      "attributes": {}
    },
    "next": {
      "rootDir": []
    },
    "react": {
      "formComponents": [],
      "linkComponents": [
        {
          "name": "Link",
          "linkAttribute": "to"
        },
        {
          "name": "NavLink",
          "linkAttribute": "to"
        }
      ],
      "version": "19.2.4",
      "componentWrapperFunctions": []
    },
    "jsdoc": {
      "ignorePrivate": false,
      "ignoreInternal": false,
      "ignoreReplacesDocs": true,
      "overrideReplacesDocs": true,
      "augmentsExtendsReplacesDocs": false,
      "implementsReplacesDocs": false,
      "exemptDestructuredRootsFromChecks": false,
      "tagNamePreference": {}
    },
    "vitest": {
      "typecheck": false
    }
  },
  "env": {
    "builtin": true
  },
  "globals": {},
  "ignorePatterns": ["node_modules/**", "dist/**", "dist-ssr/**", "src-tauri/target/**", "src-tauri/gen/**"]
}
