{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rtool",
  "version": "0.1.0",
  "identifier": "com.hejinlei.rtool",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "rtool",
        "width": 1080,
        "height": 720,
        "visible": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 16,
          "y": 22
        }
      },
      {
        "label": "clipboard_history",
        "title": "剪贴板历史",
        "url": "/#/clipboard",
        "width": 960,
        "height": 680,
        "minWidth": 560,
        "minHeight": 520,
        "center": true,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": false,
        "skipTaskbar": true
      },
      {
        "label": "launcher",
        "title": "启动器",
        "url": "/#/launcher",
        "width": 820,
        "height": 580,
        "center": true,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/clipboard_previews/**"]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
